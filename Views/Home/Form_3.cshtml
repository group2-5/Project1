<!--This page will be act as the form to enter in important information regarding their previously
    selected timeslot-->

@model FormInfo

<form asp-action="Form_3" method="post">
    <label asp-for="NameOfGroup">Name of Group</label>
    <input asp-for="NameOfGroup"/>
    <br />
    <label asp-for="SizeOfGroup">Size of Group</label>
    <input asp-for="SizeOfGroup"/>
    <br />
    <label asp-for="Email">Email Address</label>
    <input asp-for="Email"/>
    <br />
    <label asp-for="Phone">Phone Number (optional)</label>
    <input asp-for="Phone"/>
    <br />
    <!--Drop in error messages if we get errors. This is for validation.-->
    <div asp-validation-summary="All"></div>

    <button type="submit">Submit</button>
</form>

<br />

<a asp-action="Display_4" class="btn btn-primary btn-lg" role="button">View All Sign Ups</a>